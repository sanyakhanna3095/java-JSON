{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {"type": "integer"},
    "name": {"type": "string"},
    "email": {"type": "string", "format": "email"},
    "age": {"type": "integer", "minimum": 18},
    "subjects": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["id", "name", "email"]
}